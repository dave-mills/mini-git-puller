# Example Nginx reverse proxy configuration for git-puller
# Copy this file to /etc/nginx/sites-available/git-puller
# Then create a symlink: ln -s /etc/nginx/sites-available/git-puller /etc/nginx/sites-enabled/
# Test config: nginx -t
# Reload nginx: systemctl reload nginx

server {
    listen 80;
    server_name your-domain.com;  # Replace with your domain or server IP

    # Redirect HTTP to HTTPS (uncomment if using SSL)
    # return 301 https://$server_name$request_uri;

    location / {
        proxy_pass http://127.0.0.1:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }
}

